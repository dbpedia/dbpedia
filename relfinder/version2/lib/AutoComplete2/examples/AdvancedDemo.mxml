	</mx:Component>

    <mx:XML format="e4x" id="menuData">
		<root>
			<menuitem data="browse" label="Browse..."/>
			<menuitem data="remove" label="Remove All"/>
		</root>
	</mx:XML>

	<mx:VBox horizontalAlign="left">
		<mx:CheckBox id="enableMenu" label="Enable Actions Menu" selected="true" click="handleEnableMenuClick()"/>
		<mx:CheckBox id="showBrowse" label="Show Browse Button"/>
		<mx:CheckBox id="showRemove" label="Show Remove Button" selected="true"/>
		<mx:CheckBox id="showOrder" label="Show Order Buttons"/>
		<mx:CheckBox id="useListBuilder" label="Use List Builder" enabled="{ showBrowse.selected || enableMenu.selected }"/>
	</mx:VBox>
	<mx:Spacer width="100%"/>
	<hc:AdvancedAutoComplete id="autoComplete" dataProvider="{ colors }" labelField="name"
		width="300" useListBuilder="{ useListBuilder.selected }" matchType="anyPart"
		showBrowseButton="{ showBrowse.selected }" showOrderButtons="{ showOrder.selected }"
		allowMultipleSelection="true" selectionLayout="vertical" change="handleAutoCompleteChange()"
		dropDownItemRenderer="{ dropDownItemRenderer }" itemClick="handleItemClick(event)"
		actionsMenuDataProvider="{ menuData }" showRemoveButton="{ showRemove.selected }"/> 
