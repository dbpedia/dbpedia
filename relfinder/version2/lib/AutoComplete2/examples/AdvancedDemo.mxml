			private function handleAutoCompleteChange():void
			{
				var color:Object = autoComplete.selectedItem;
				
				if (color != null && color.hasOwnProperty( "hex" ))
				{
					Application.application.setStyle( "backgroundColor", color.hex );
				}
			}			

			private function handleEnableMenuClick():void
			{
				autoComplete.actionsMenuDataProvider = enableMenu.selected ? menuData : null;
			}
			
			private function handleItemClick( event:MenuEvent ):void
			{
				switch (String(event.item.@data))
				{
					case "browse":
						autoComplete.showBrowser();
						break;
					case "remove":
						autoComplete.selectedItems.removeAll();
						break;		
				}
			}
			
