				timer.start();
				*/
				content.addEventListener(MouseEvent.MOUSE_DOWN, titleBarDownHandler);
				//closeButton.addEventListener(MouseEvent.CLICK, closeClickHandler);
				//pinButton.addEventListener(MouseEvent.CLICK, pinClickHandler);
			}
			
